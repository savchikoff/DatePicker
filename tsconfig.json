{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        ".storybook/**/*",
        ".eslintrc.cjs",
        "./rollup.config.js",
        "./babel.config.js",
        "build",
        "src/**/*.stories.tsx"
    ],
    "exclude": [
        "node_modules",
        "build",
        "src/**/*.test.tsx"
    ]
}